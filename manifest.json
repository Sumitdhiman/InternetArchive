{
  "manifest_version": 3,
  "name": "Open in the Internet Archive",
  "version": "1.1",
  "description": "Opens the current open page's archive.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Open Page Archive",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
